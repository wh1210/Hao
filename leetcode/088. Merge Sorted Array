// ----------------------------------------------

// An initial solution
class Solution {
    public void merge(int[] nums1, int m, int[] nums2, int n) {
        int[] result = new int[m + n];
        
        int pointer1 = 0;
        int pointer2 = 0;
        int pointer = 0;
        
        if (n != 0 && m != 0) {
            while (pointer1 < m || pointer2 < n) {
                if (pointer1 == m) {
                    result[pointer] = nums2[pointer2];
                    pointer2++;
                    pointer++;
                } else if (pointer2 == n) {
                    result[pointer] = nums1[pointer1];
                    pointer1++;
                    pointer++;
                } else {
                    if (nums1[pointer1] < nums2[pointer2]) {
                        result[pointer] = nums1[pointer1];
                        pointer++;
                        pointer1++;
                    } else {
                        result[pointer] = nums2[pointer2];
                        pointer++;
                        pointer2++;
                    }
                }   
            }
            for (int i = 0; i < m + n; i++) {
                nums1[i] = result[i];
            }
        } else if (m == 0) {
            for (int i = 0; i < m + n; i++) {
                nums1[i] = nums2[i];
            }
        }    
    }
}
