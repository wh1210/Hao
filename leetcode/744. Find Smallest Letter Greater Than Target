class Solution {
    public char nextGreatestLetter(char[] letters, char target) {
        int lo = 0;
        int hi = letters.length;
        
        while (lo < hi) {
            int mi = lo + (hi - lo) / 2;
            if (letters[mi] > target) {
                hi = mi;
            } else {
                lo = mi + 1;
            }
        }
        
        if (lo == letters.length) return letters[0];
        
        return letters[lo];
    }
}
