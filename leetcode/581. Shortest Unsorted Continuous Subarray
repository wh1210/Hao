class Solution {
    public int findUnsortedSubarray(int[] nums) {
        int[] temp = new int[nums.length];
        for (int i = 0; i < nums.length; i++) {
            temp[i] = nums[i];
        }
        Arrays.sort(temp);
        int lo = -1;
        int hi = nums.length - 1;
        for (int i = 0; i <nums.length; i++) {
            if (temp[i] != nums[i]) {
                lo = i;
                break;
            }
        }
        if (lo == -1) return 0;
        for (int i = nums.length - 1; i >= 0; i--) {
            if (temp[i] != nums[i]) {
                hi = i;
                break;
            }
        }
        
        return hi - lo + 1;
    }
}
