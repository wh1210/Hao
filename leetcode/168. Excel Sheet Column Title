class Solution {
    public String convertToTitle(int n) {
        StringBuilder str = new StringBuilder(); 
        while (n > 0) {
            // The core code.
            // it is important to minus 1 before mod.
            str.insert(0,(char)('A' + (n - 1) % 26));
            n = (n - 1) / 26;
        }
        return str.toString();
    }
}
